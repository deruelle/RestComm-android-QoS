<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/listViewItemBackground"
        android:layout_width="fill_parent"
   		android:layout_height="wrap_content"
   		android:background="#f2f2f2" >
  
	    <TextView
	        android:id="@+id/lineLabelTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="30px"
	        android:textStyle="bold"
	        android:textSize="18sp"
	        android:text="@string/transitsampling_line" />
	
	    <TextView
	        android:id="@+id/lineNameTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="16sp"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/lineLabelTextView"
	        android:text="Test" />
	
	    <TextView
	        android:id="@+id/fromLabelTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="30px"
	        android:textSize="14sp"
	        android:layout_below="@+id/lineLabelTextView"
	        android:text="@string/transitsampling_from" />
	
	    <TextView
	        android:id="@+id/fromTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/fromLabelTextView"
	        android:layout_marginLeft="30px"
	        android:layout_toLeftOf="@+id/view"
	        android:layout_toRightOf="@+id/view"
	        android:lines="2"
	        android:text="depart"
	        android:textSize="16sp" />
	
	    <View
	        android:id="@+id/view"
	        android:layout_width="4px"
	        android:layout_height="75px"
	        android:background="#ffffff"
	        android:layout_marginBottom="5px"
	        android:layout_alignBottom="@+id/fromTextView"
	        android:layout_centerHorizontal="true" />
	
	    <TextView
	        android:id="@+id/toLabelTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/fromTextView"
	        android:textSize="14sp"
	        android:layout_marginLeft="10px"
	        android:layout_toRightOf="@+id/view"
	        android:text="@string/transitsampling_to" />
	
	    <TextView
	        android:id="@+id/toTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/view"
	        android:layout_toRightOf="@+id/view"
	        android:textSize="16sp"
	        android:layout_marginLeft="10px"
	        android:text="arrive" />
    
    </RelativeLayout>
	    
</RelativeLayout>
