<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/listViewItemBackground"
        android:layout_width="fill_parent"
   		android:layout_height="wrap_content"
   		android:background="#f2f2f2" >
  
	    <CheckBox
	        android:id="@+id/libraryCheckBox"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="30px"/>

	    <TextView
	        android:id="@+id/libraryTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/libraryCheckBox"
	        android:layout_alignBottom="@+id/libraryCheckBox"
	        android:layout_toRightOf="@+id/libraryCheckBox"
	        android:text="textview"
	        android:textSize="16sp" />
	
    </RelativeLayout>
	    
</RelativeLayout>
