<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<RelativeLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1.5"
	    android:background="@drawable/white"
    	>
    	<ImageView android:id="@+id/MMCLogo"
			android:background="@drawable/old_logo_mmc"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		/>
		<TextView android:id="@+id/Map_Title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:textStyle="bold"
			android:textSize="20dip"
			android:textColor="@color/solid_blue_MMC"
			android:text="@string/GenericText_Login"
		/>
</RelativeLayout>
<ScrollView
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="0dip"
    android:background="@drawable/white"
    android:layout_weight="8.8"
    >
    <RelativeLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:padding="10dp"
    	>
    	<TextView android:id="@+id/align_title"
			android:layout_width="wrap_content"
			android:layout_height="0dip"
			android:layout_alignParentLeft="true"
			android:textColor="@color/solid_black"
			android:textSize="20dip"
			android:text="@string/GenericLabel_Username"
		/>
    	<TextView android:id="@+id/Login_email_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignRight="@id/align_title"
			android:layout_marginTop="20dip"
			android:textColor="@color/solid_black"
			android:textSize="20dip"
			android:text="@string/GenericLabel_Username"
		/>
		<TextView android:id="@+id/Login_password_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_below="@id/Login_email_title"
			android:layout_marginTop="25dip"
			android:textColor="@color/solid_black"
			android:textSize="20dip"
			android:text="@string/GenericLabel_Password"
		/>
    	<EditText android:id="@+id/Login_email"
			android:layout_width="320dip"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/align_title"
			android:layout_alignBaseline="@id/Login_email_title"
			android:singleLine="true"
			android:text=""
		android:inputType="textEmailAddress"/>
		<EditText android:id="@+id/Login_password"
			android:layout_width="320dip"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/Login_password_title"
			android:layout_alignBaseline="@id/Login_password_title"
			android:singleLine="true"
			android:text=""
		android:inputType="textPassword"/>
		<Button android:id="@+id/BTN_login" 
			android:layout_height="60dip" 
			android:layout_width="90dip"
			android:layout_below="@id/Login_password_title"
			android:layout_marginTop="20dp"
			android:layout_alignLeft="@id/Login_password" 
			android:text="@string/GenericText_Login" 
		/>
	</RelativeLayout>
</ScrollView>
</LinearLayout>
